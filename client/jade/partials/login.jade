div#login-overlay(ng-controller='modal-controller')
    div.modal
        form.login-form
            div.closemodal(ng-click='showlogin()') X
            h3 Login form 
            span.success {{login.success}}
            span.error {{login.error}}
            label Email:
            input(type='text' ng-model='login.email')
            label Password: 
            input(type='password' ng-model='login.password')
            button(ng-click='login_user()') Login 
